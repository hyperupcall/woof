{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"additionalProperties": false,
	"required": ["name_id", "name_pretty", "releases"],
	"properties": {
		"name_id": {
			"type": "string"
		},
		"name_pretty": {
			"type": "string"
		},
		"releases": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"required": ["version", "platforms"],
				"properties": {
					"version": {
						"type": "string"
					},
					"platforms": {
						"type": "array",
						"items": {
							"type": "object",
							"additionalProperties": false,
							"required": ["arch", "os", "download_url"],
							"properties": {
								"arch": {
									"type": "string",
									"enum": [
										"amd64",
										"x86",
										"arm64",
										"armv7l",
										"armv6",
										"ppc64",
										"ppc64le",
										"s390x",
										"riscv64"
									]
								},
								"os": {
									"type": "string",
									"enum": [
										"linux",
										"freebsd",
										"openbsd",
										"netbsd",
										"aix",
										"solaris",
										"darwin",
										"windows"
									]
								},
								"download_url": {
									"type": "string"
								},
								"download_sha256sum": {
									"type": "string"
								},
								"download_size": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		}
	}
}
